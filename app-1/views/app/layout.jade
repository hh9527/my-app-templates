doctype html
html
	head
		meta(charset="utf-8")
		title my-app

		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui")
		meta(name="apple-mobile-web-app-status-bar-style" content="yes")

		link(rel="shortcut icon" href="/favicon" type="image/x-icon")
		link(rel="stylesheet" href="/s/mobile-angular-ui/dist/css/mobile-angular-ui-base.min.css")
		link(rel="stylesheet" href="/s/mobile-angular-ui/dist/css/mobile-angular-ui-desktop.min.css")
		link(rel="stylesheet" href="/css/my-app.css")
		block x-links

		script(src="/s/angular/angular.min.js")
		script(src="/s/angular-route/angular-route.min.js")
		script(src="/s/angular-touch/angular-touch.min.js")
		script(src="/s/mobile-angular-ui/dist/js/mobile-angular-ui.min.js")
		script(src="/js/cordova.android.js")
		block x-scripts

	body(ng-app="MyApp" ng-controller="MainCtrl")
		div.sidebar.sidebar-left(toggleable parent-active-class="sidebar-left-in" id="sidebar")
			block sidebar
		div.sidebar.sidebar-right(toggleable parent-active-class="sidebar-right-in" id="sidebar-right")
			block sidebar-right
		div.app
			div.navbar.navbar-app.navbar-absolute-top
				div.navbar-brand.navbar-brand-center(yield-to="title")
					span(onclick="alert(window.navigator.accelerometer)") my-app
				div.btn-group.pull-left
					div.btn.btn-navbar.sidebar-toggle(ng-click="toggle('sidebar')")
						i.fa.fa-bars
				div.btn-group.pull-right
					div.btn.btn-navbar.sidebar-toggle(ng-click="toggle('sidebar-right')")
						i.fa.fa-comment
			div.app-body(ng-class="{loading: loading}")
				div.app-content-loading(ng-show="loading")
					i.fa.fa-spinner.fa-spin.loading-spinner
				ng-view.ap-content(ng-hide="loading")
